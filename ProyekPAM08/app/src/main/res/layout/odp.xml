<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20pt"
        android:layout_marginTop="50pt"
        android:text="Hasil dari cek Resiko anda :"
        android:textColor="#800000"
        android:textSize="10pt" />


    <Button
        android:id="@+id/button2"
        android:layout_width="280dp"
        android:layout_height="100dp"
        android:layout_marginLeft="20pt"
        android:layout_marginTop="100pt"
        android:background="@drawable/custom1"
        android:shadowColor="#FF0000"
        android:text="Anda kategori ODP"
        android:textColor="#ffff"
        android:textColorHighlight="#FF0000"
        android:textColorHint="#FF0000"
        android:textColorLink="#FF0000"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20pt"
        android:layout_marginTop="180pt"
        android:maxWidth="65pt"
        android:text="Silahkan menghubungi nomor di bawah ini 08XX-XXXX-XXXX" />

</RelativeLayout>